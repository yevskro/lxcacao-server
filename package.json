{
  "name": "LxCacao-Server",
  "version": "0.0.0",
  "description": "The backend for the LxCacao React Native application.",
  "main": "server/server.js",
  "repository": "https://github.com/yevskro/lxcacao-server.git",
  "author": "Yevgeniy Skroznikov <yevskro@gmail.com>",
  "license": "MIT",
  "scripts": {
    "ci:test": "cross-env NODE_ENV=test jest --passWithNoTests --ci --runInBand --detectOpenHandles --forceExit",
    "setup-testdb": "psql -h localhost -U postgres -d testdb -f src/db/seed.sql",
    "test": "yarn setup-testdb && jest --coverage"
  },
  "dependencies": {
    "pg": "^8.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.27",
    "@types/pg": "^7.14.4",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "yarn setup-testdb && jest --coverage --findRelatedTests"
    ]
  }
}